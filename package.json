{
  "name": "react-slidedown",
  "version": "2.4.7",
  "description": "Component for animating height during mount/unmount using a CSS transition",
  "main": "lib/slidedown.js",
  "style": "lib/slidedown.css",
  "types": "lib/slidedown.d.ts",
  "scripts": {
    "clean": "rm -rf 'lib/**/*.{js,js.map,d.ts}'",
    "test": "npm run build && vitest run",
    "test:watch": "concurrently \"npm run build:watch\" \"vitest\" --kill-others",
    "build": "tsc",
    "build:watch": "tsc -w"
  },
  "author": "Frank Wallis",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "jsdom": "^27.0.0"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "react": "^16.3.0 || 17 || ^18 || ^19",
    "react-dom": "^16.3.0 || 17 || ^18 || ^19"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.js.map",
    "lib/**/*.css",
    "lib/**/*.d.ts"
  ],
  "repository": "frankwallis/react-slidedown",
  "keywords": [
    "react",
    "animation",
    "collapse",
    "dropdown",
    "transition",
    "mount",
    "height",
    "auto",
    "dynamic",
    "css",
    "slide"
  ]
}
